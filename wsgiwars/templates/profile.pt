<metal:main use-macro="load: layout.pt" >
  <div class="span9" metal:fill-slot="content">
    <h1 i18n:translate=''> Edit your profile !</h1>

    <form action="${request.route_path('profile')}" method="POST" enctype="multipart/form-data">
    <div class="row">
      <label class="span2" for="login" i18n:translate=''>Login :</label>
      <input class="span4" type="text" name="login" id="login" readonly value="${user._id}" />
    </div>

    <div class="row">
      <label class="span2" for="name" i18n:translate=''>Name :</label>
      <input class="span4" type="text" name="name" id="name" value="${user.name}" />
    </div>

    <div class="row">
      <label class="span2" for="email" i18n:translate=''>Email :</label>
      <input class="span4" type="email" name="email" id="email" value="${user.mail}"/>
    </div>

    <div class="row">
      <label class="span2" for="avatar" i18n:translate=''>Avatar :</label>
      <input class="span4" type="file" name="avatar" id="avatar" />
    </div>

    <div class="row">
      <label class="span2" for="description" i18n:translate='' >Description :</label>
      <textarea class="span4" row="5" placeholder="just a raw text..." id="description" name="description">${user.description}</textarea>
    </div>

    <div class="row">
      <label class="span2" for="initPassword" i18n:translate=''>
          Initial Password
      </label>
      <input class="span4" type="password" name="initPassword" id="initPassword" />
    </div>

     <div class="row">
      <label class="span2" for="newPassword" i18n:translate=''>
          New Password
      </label>
      <input class="span4" type="password" name="newPassword" id="newPassword" />
    </div>

     <div class="row">
      <label class="span2" for="confirmPassword" i18n:translate=''>
          Confirm
      </label>
      <input class="span4" type="password" name="confirmPassword" id="confirmPassword" />
    </div>

    <div class="row">
      <input class="span3 btn btn-danger" type="submit" name="submitDelete"
      id="submitDelete" i18n:translate='' value='Delete'></input>
      <input class="span3 btn btn-success" type="submit" name="submmit" id="submit" i18n:translate='' value='Save !'></input>
    </div>
    </form>

  </div>
</metal:main>
