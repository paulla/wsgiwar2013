<metal:main use-macro="load: layout.pt" >
  <div class="span9" metal:fill-slot="content">
    <h1 i18n:translate=''>Add a link !</h1>

    <form action="${request.route_path('submitLink')}" method="POST">
      <div class='row'>
	<label class="span2" for="link" i18n:translate=''>Link :</label>
	<input tal:condition="link is not None" class="span7" name="link" id="link" placeholder="Paste you link here !" type="url" value="${link.url}" />
	<input tal:condition="link is None" class="span7" name="link" id="link" placeholder="Paste you link here !" type="url" />
      </div>

      <div class='row'>
	<label class="span2" for="tags" i18n:translate=''>Tags :</label>

	<input  tal:condition="link is not None" class="span7" name="tags" id="tags"
		placeholder='add your tags split by ","' type="text"
		value="${', '.join(link.tags)}"/>

	<input  tal:condition="link is None" class="span7" name="tags" id="tags"
		placeholder='add your tags split by ","' type="text"/>
      </div>

      <div class="row">
	<label class="span2" for="comment" i18n:translate=''>Comment :</label>
	<textarea tal:condition="link is None" row="5" class="span7" name="comment" id="comment" placeholder='Comment your link' ></textarea>
	<textarea tal:condition="link is not None" row="5" class="span7" name="comment" id="comment" placeholder='Comment your link' >${link.comment}</textarea>
      </div>

      <div class="row">
	<label class="span2" for="private" i18n:translate=''>Private</label>
	<input class="span1" type="checkbox" name="private" id="private" value="private"/>
      </div>

     <div class="row">
      <input class="span3 btn btn-success" type="submit" name="submmit" id="submit" i18n:translate='' value='Add Link!'></input>
    </div>

    </form>

  </div>
</metal:main>
